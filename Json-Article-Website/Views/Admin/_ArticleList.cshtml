 @model ArticlesList

@if (Model != null && Model.Articles.Count() > 0)
{
	@foreach (var article in Model.Articles)
	{
		<li class="list-group-item px-0 py-3">
			<a class=" link-dark text-decoration-none"
			   asp-action="Details"
			   asp-controller="Article"
			   asp-route-id="@article.Id"
			   asp-route-slug="@article.Slug">
				<span class="d-flex w-100 justify-content-lg-between flex-column flex-lg-row gap-2">
					<h5 class="mb-1 fw-bold">
						@article.Title
					</h5>
					<span class="text-body-secondary flex-shrink-0">
						<span class="d-flex flex-wrap gap-2 gap-md-3">
							<span class="article-date">
								<span class="bi bi-calendar"></span>
								<span>@article.PublishedDate.ToString("MMMM dd yyyy, hh:mm tt")</span>
							</span>
							<span class="article-views">
								<span class="bi bi-eye-fill"></span>
								<span>@article.Views.ToAbbreviated() Views</span>
							</span>
							<span class="article-likes">
								<span class="bi bi-heart"></span>
								<span>@article.Likes.ToAbbreviated() Likes</span>
							</span>
						</span>
					</span>
				</span>
			</a>
			<span class="">
				<span class="d-flex justify-content-lg-end gap-3 pt-2 pt-lg-0">
					<a asp-action="edit"
					   asp-controller="Admin"
					   asp-route-id="@article.Id"
					   class="link-primary text-decoration-none">
						<span>Edit</span>
					</a>
					<a asp-action="Delete"
					   asp-controller="admin"
					   asp-route-id="@article.Id"
					   class="link-danger text-decoration-none delete-article">
						Delete
					</a>
				</span>
			</span>
		</li>
	}

	@if (Model.HasNextPage && Model.Page > 0)
	{
		<div class="d-flex justify-content-center py-3 load-more-article">
			<button type="button"
					accesskey="" class="btn btn-secondary px-4 rounded-pill"
					data-url="@Url.Action("Index", new { page = Model.Page })">
				<span>Load More Articles</span>
				<span class="bi bi-arrow-down"></span>
			</button>
		</div>
	}
}