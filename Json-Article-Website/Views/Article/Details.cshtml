@using Json_Article_Website.Models

@model ArticleDetailsModel
@{
    ViewData["Title"] = Model.Title;
}

<sectio class="d-flex justify-content-between  flex-column flex-lg-row gap-3">
    <article class="article-details mx-lg-5 px-lg-5">
        <h1 class="article-title">@Model.Title</h1>
        <p class="article-date">
            <span class="bi bi-calendar"></span>
            <span>@Model.PublishedDate.ToString("MMMM dd yyyy, hh:mm tt")</span>
        </p>
        <div class="article-content mt-5">
            @Html.Raw(Model.Content)
        </div>
    </article>
